---
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
    const allPosts = await Astro.glob('../posts/*.md');

  return [
    { params: { tag: "blogging" }, props: {posts: allPosts} },
    { params: { tag: "liturgies" }, props: {posts: allPosts} },
    { params: { tag: "commute by bike" }, props: {posts: allPosts} },
    { params: { tag: "daily" }, props: {posts: allPosts} },
    { params: { tag: "for drivers" }, props: {posts: allPosts} },
    { params: { tag: "on the road" }, props: {posts: allPosts} },
    { params: { tag: "road bike" }, props: {posts: allPosts} },
    ];
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post) => post.frontmatter.tags?.includes(tag));
---
<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {filteredPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</BaseLayout>